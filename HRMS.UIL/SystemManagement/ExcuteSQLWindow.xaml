<Window x:Class="HRMS.UIL.SystemManagement.ExcuteSQLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="执行SQL语句" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="50,30,0,0" Text="SQL语句：" VerticalAlignment="Top"/>
        <TextBox Name="txtQueryText" Margin="50,50,50,375" TextWrapping="Wrap"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,150,0,0" Text="查询结果：" VerticalAlignment="Top"/>
        <TextBox Name="txtResult" IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Margin="50,170,50,30" TextWrapping="Wrap"/>
        <Button Name="btnExcute" Content="执行" Click="btnExcute_Click" HorizontalAlignment="Left" Margin="265,120,0,0" VerticalAlignment="Top" Width="70"/>
    </Grid>
</Window>
