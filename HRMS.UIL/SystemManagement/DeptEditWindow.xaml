<Window x:Class="HRMS.UIL.SystemManagement.DeptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="部门编辑" Height="250" Width="300" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Name="gdDepartment">
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="50,50,0,0" Text="请输入部门名称：" VerticalAlignment="Top"/>
        <TextBox Name="txtDeptName" Text="{Binding Name}" HorizontalAlignment="Left" Height="20" Margin="50,80,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Name="btnConfirm" Content="确认" Click="btnConfirm_Click" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnCancle" Content="取消" Click="btnCancle_Click" HorizontalAlignment="Left" Margin="175,150,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
